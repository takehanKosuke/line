= form_for @room, :url=>{:action=>"group_create"} do |f|
  =f.hidden_field :is_group, value: true
  =f.hidden_field :last_message_at, value: DateTime.now
  .form-group
    = f.label 'グループメンバー選択', class: "col-md-3 control-label"
    .col-md-9
      .checkbox-wrap
        = collection_check_boxes(:room, :user_ids, @friends, :id, :name ) do |t|
          %label
            = t.check_box
            = t.text
    .form-group
      .pull-right= f.submit class: "btn"
