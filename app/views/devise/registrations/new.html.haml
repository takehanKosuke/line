.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label '名前', class: "col-sm-3 control-label"
      = f.text_field :name, class: "form-control", require: true
    .form-group
      = f.label '写真', class: "col-sm-3 control-label"
      = f.file_field :image, class: "form-control", require: true
    .form-group
      = f.label 'メールアドレス', class: "col-sm-3 control-label"
      = f.email_field :email, class: "form-control", require: true
    .form-group
      = f.label 'パスワード', class: "col-sm-3 control-label"
      = f.password_field :password, class: "form-control", require: true
    .form-group
      = f.label 'パスワード確認', class: "col-sm-3 control-label"
      = f.password_field :password_confirmation, class: "form-control", require: true
    .form-group
      = f.submit "新規登録する", class: "btn btn-info"
