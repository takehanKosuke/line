= form_for(@uaer) do |f|
  = devise_error_messages!
  .form-group
    = f.label '名前', class: "col-sm-3 control-label"
    = f.text_field :name, class: "form-control", require: true
  .form-group
    = f.label '写真', class: "col-sm-3 control-label"
    = f.file_field :image, class: "form-control", require: true
  .form-group
    = f.label 'メールアドレス', class: "col-sm-3 control-label"
    = f.email_field :email, class: "form-control", require: true
  = f.submit '送信する'
